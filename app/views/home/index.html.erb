

       
<header>
<div class="header_contents">
<div class="logo">
<a href="/">
<%= image_tag 'image.png' %>
</a></div>

<div class="search">
 <%= form_for @question, remote: true do |f| %>

<%= f.text_field:query, class: 'form-control', autofocus: true, placeholder: 'Ask or search on Quora' %>
</div> 
<div class="actions">
<%= f.submit  id: 'create_question_submit' 'name', :class => 'button' , :value => 'Ask Question' %>

</div>
<% end %>


<div class="option">
<nav>
<ul>
<li><a href="/" id="read_link"> Read</a></li>
<li> <a href="/" id="answer_link">answer </li>
<li><a href="/" id="notification_link">Notification</li>
<li> profile
	<ul>
	<li> Dashboard</li>
	<li><div class="profile">

 	<%= link_to "Sign Out",destroy_user_session_path,method: :delete %>

	</div></li>
	</ul>
</li>
</ul>
</nav>
</div>

</div>


</header>


<main>
	<aside></aside>
	<section>
	
		<div  class="create_question">
			<div class="profile_pic">
					<% if !current_user.profile_picture %>
					<%= image_tag 'default.png' %>
					<% else %>
					<img src="/uploads/<%= current_user.profile_picture %>">
					<% end %>
					<%= current_user.email.slice(0..-11) %>
			</div>
			<%= link_to "What is your Question?" , new_question_path(@question) , :class=> 'link' %>
		</div>
		
			<div id="questions">

				 <% Question.all.each do |question|  %>

				 <%= render 'question', question: question %>
	
				 <% end %>

			 </div>
		

	</section>
	<div class="right"></div>
</main>
















